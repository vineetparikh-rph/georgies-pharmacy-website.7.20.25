{
  "functions": {
    "api/*.ts": {
      "runtime": "vercel-node@canary"
    }
  },
  "builds": [
    {
      "src": "server/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "client/vite.config.ts",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/dist"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server/api/$1.ts" },
    { "src": "/(.*)", "dest": "client/dist/index.html" }
  ]
}
